{
  "name": "very/framework",
  "description": "The verystar php framework",
  "license": "MIT",
  "authors": [
    {
      "name": "fifsky",
      "email": "caixudong@verystar.cn"
    }
  ],
  "repositories": [
    {
      "type": "git",
      "url": "git@git.verystar.cn:very/framework.git"
    }
  ],
  "require": {
    "php": ">=5.5.0",
    "ext-mbstring": "*",
    "ext-mcrypt": "*",
    "monolog/monolog": "~1.17",
    "symfony/console": "2.8.*|3.0.*",
    "swiftmailer/swiftmailer": "~5.4"
  },
  "replace": {
    "very/cache": "self.version"
  },
  "require-dev": {
    "phpunit/phpunit": "~4.1"
  },
  "autoload": {
    "files": [
      "src/Very/helper.php"
    ],
    "psr-4": {
      "Very\\": "src/Very/"
    }
  }
}